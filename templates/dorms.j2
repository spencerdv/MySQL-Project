{% extends 'base.j2' %}
{% block content %}


    <div class="container py-1">
    <table class="table table-hover table-bordered table-responsive sortable">
        <div class="table-title table-wrapper">
            <div class="row ml-auto col-auto">
                <div class=" col-sm-4">
                    <input type="text" class="search-input" placeholder="Search for dorm name">
                </div>
                <div class="col-sm-4">
                    <h2>Manage <b>Dorms</b></h2>
                </div>
                <div class="col-sm-4">
                    <button class="btn btn-info add-new"> <span class="material-symbols-outlined">add_box</span> Add New Dorm</button>
                </div>
            </div>
        </div>
    <thead>
        <th>Dorm ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>Max Occupancy</th>
        <th>Edit</th>
        <th>Delete</th>
    </thead>
    <tbody>
    {% for dorm in dormData %}
    <tr>
        <td>{{dorm['dormID']}}</td>
        <td>{{dorm['name']}}</td>
        <td>{{dorm['address']}}</td>
        <td>{{dorm['maxOccupancy']}}</td>
        <td><button class="add btn" title="Save" data-toggle="tooltip"><i class="material-icons">&#xE03B;</i></button>
        <button class="edit btn" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></button>
        </td>
        <td> <button class="delete btn" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></button></td>
    </tr>
    {% endfor %}
    </tbody>
    </table>

</div>

{% endblock %}